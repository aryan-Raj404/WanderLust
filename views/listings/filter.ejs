<% layout('/layouts/boilerplate') %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    margin-right: 2rem;
    text-align: center;
    margin-top: 1.5rem;
    opacity: 0.7;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.9rem;
  }
  .filter:hover {
    opacity: 1;
  }
  #filters a{
    color: black;
    text-decoration: none;
  }
</style>
<body>
  <div id="filters">
  <a href="/listing/filter/trending">
    <div class="filter">
      <div><i class="ri-fire-fill"></i></div>
      <p>Trending</p>
    </div>
  </a>

  <a href="/listing/filter/iconic-cities">
    <div class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <p>Iconic Cities</p>
    </div>
  </a>

  <a href="/listing/filter/mountains">
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
  </a>

  <a href="/listing/filter/beach">
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
  </a>

  <a href="/listing/filter/luxury-rooms">
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Luxury Rooms</p>
    </div>
  </a>

  <a href="/listing/filter/castle">
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castle</p>
    </div>
  </a>

  <a href="/listing/filter/amazing-pools">
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
  </a>

  <a href="/listing/filter/farming">
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farming</p>
    </div>
  </a>

  <a href="/listing/filter/arctic">
    <div class="filter">
      <div><i class="fa-solid fa-snowman"></i></div>
      <p>Arctic</p>
    </div>
  </a>
</div>
  <h4>Showing results for <%= filter %></h4>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
    <% for(listing of listings){ %>
    <% if(listing.category === (filter)){ %>
      <a href="/listing/<%= listing._id %>" class="listing-link">
      <div class="card col cardList">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listimg image"
          style="height: 19rem"
        />
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text">
            â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
          </p>
        </div>
      </div>
    </a>
    <% } %>
    <% } %>
  </div>
</body>
